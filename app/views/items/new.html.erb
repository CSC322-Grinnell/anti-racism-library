<header>
    <style>
        body {
          font-family: Arial, Helvetica, sans-serif;
          margin: 0;
        }
    </style>
</header>
<h1>Add a resource to the library!</h1>
<h4> This resource will be reviewed and added to the library if suitable. </h4>
<div>
    <%= form_with(model: @item, local: true) do |f| %> 
    <%= render 'shared/error_messages' %>

        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
        
        <%= f.label :author %>
        <%= f.text_field :author, class: 'form-control' %>
        
        <%= f.label :description %>
        <%= f.text_field :description, class: 'form-control' %>
        
        <%= f.label :url, 'Optional URL' %>
        <%= f.text_field :url, class: 'form-control' %>
        
        <%= f.label :category %>
        <%= f.select :category, ["Book", "Podcast", "Video", "Journal", "Other"], {}, {class: 'form-control'}  %>
        
        <br>
        
        <%= f.submit "Add resource to the library", class: "btn btn-success" %>
    <% end %>
</div>

