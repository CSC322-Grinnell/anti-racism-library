<h1>Add a resource to the library</h1>
<div>
    <%= form_with(model: @user, local: true) do |f| %> 
        <%= f.label :title %>
        <%= f.text_field :title %>
        
        <%= f.label :author %>
        <%= f.email_field :author %>
        
        <%= f.label :description %>
        <%= f.password_field :description %>
        
        <%= f.submit "Add resource to the library", class: "btn btn-primary" %>
    <% end %>
</div>

