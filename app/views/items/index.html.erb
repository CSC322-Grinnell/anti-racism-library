<% provide(:title, 'All resources') %>
<head>
  
</head>
<%= form_tag(search_page_path, :method => "get", class: 'form-inline my-2 my-lg-0') do %>
  <div class="search-input">
    <%= search_field_tag :search, params[:search], placeholder: "Search", class: "form-control mr-sm-2", :size => "60" %>
    <%= button_tag "Search", :class => "btn button1", :name => nil, :style => "margin-right: 1vw" %>
  </div>
<% end %>
<h1> <%= @page_title %></h1>
<div class="scroll">
  <tr>
    <th colspan="3"></th>
  </tr>
  <table>
    <% @approveds.each do |item| %>
      <tr>
        <td>  <%= link_to item.title, item %></td>
      </tr>
    <% end %>
  </table>
</div>

<style>
    div.scroll {
        width: 100;
        height: auto;
        overflow: scroll;
        scrollbar-color: black
    }

</style>