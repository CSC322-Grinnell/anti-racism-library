<% provide(:title, 'All resources') %> 
<h1>All library resources</h1>
<div class="scroll"> 
 <table>
  <tr>
    <th colspan="3"></th>
  </tr>
 <div>
  <h5 style="padding: 0;">Filter By: </h5>
  <form style="padding: 0;">
    <div class="form-inline" style="padding: 0;">
      <div class="form-check form-check-inline" style="padding-top: 0;">
        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1">
        <label class="form-check-label">Articles</label>
      </div>
      <div class="form-check form-check-inline" style="padding-top: 0;">
        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2">
        <label class="form-check-label">Books</label>
      </div>
      <div class="form-check form-check-inline" style="padding-top: 0;">
        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option4">
        <label class="form-check-label">Audio Books</label>
      </div>
      <div class="form-check form-check-inline" style="padding-top: 0;">
        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option5">
        <label class="form-check-label">Websites</label>
      </div>
      <div class="form-check form-check-inline" style="padding-top: 0;">
        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option6">
        <label class="form-check-label">Podcasts</label>
      </div>
      <div class="form-check form-check-inline" style="padding-top: 0;">
        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option7">
        <label class="form-check-label">Essays</label>
      </div>
      <div class="form-check form-check-inline" style="padding-top: 0;">
        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option8">
        <label class="form-check-label">Other</label>
      </div>
      <div class="form-check form-check-inline" style="padding-top: 0;">
        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option9" disabled>
        <label class="form-check-label">On Campus</label>
      </div>
    </div>
    </form>
</div>

 <div class="field">
    <%= f.label :autolyse %><br />
    <%= f.label :autolyse, "Yes", :value => "true"  %>
    <%= f.radio_button :autolyse, true %>
    <%= f.label :autolyse, "No", :value => "false" %>
    <%= f.radio_button :autolyse, false, :checked => true %>
  </div>
  <% @items.each do |item| %>
 
    <tr>
      <td>  <%= link_to item.title, item %></td>
      
      <td> <div class="horizontalgap" style="width:200px"></div> </td>
      <td><%= link_to 'Edit', edit_item_path(item) %></td>
      
     <td> <div class="horizontalgap" style="width:10px"></div> </td>
      <td><%= link_to 'Destroy', item_path(item),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
</div>

<style>
    div.scroll{width: 100; height: auto; overflow: scroll; scrollbar-color: black}
 
</style>

