<% provide(:title, 'All resources') %> 
<head>
<style>


.button1 {background-color: #e7e7e7; color: black;} /* Gray */ 

body {
  font-family: Arial, Helvetica, sans-serif;
  margin: 0;
}


</style>
</head>
<form class="form-inline my-2 my-lg-0">
     <input class="form-control mr-sm-2" type="search" placeholder="Search" size = "60" aria-label="Search">
      <button class="btn button1" style = "margin-right: 1vw" type="submit">Search</button>
     </form>
<h1>All library resources</h1>
<div class="scroll"> 
 <table>
  <tr>
    <th colspan="3"></th>
  </tr>
 
  <% @items.each do |item| %>
    <tr>
      <td>  <%= link_to item.title, item %></td>
      
      <td> <div class="horizontalgap" style="width:200px"></div> </td>
      <td><%= link_to 'Edit', edit_item_path(item) %></td>
      
     <td> <div class="horizontalgap" style="width:10px"></div> </td>
      <td><%= link_to 'Destroy', item_path(item),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
</div>

<style>
    div.scroll{width: 100; height: auto; overflow: scroll; scrollbar-color: black}
 
</style>

