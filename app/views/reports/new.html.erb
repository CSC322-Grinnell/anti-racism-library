<%= form_with(model: @report, local: true) do |f| %> 
    

        <%= f.label :reson %>
        <%= f.select :reason, ["Inappropriate/offensive", "Misinformation", "Irrelevant Information", "Spelling/Citation Error","General Concern", "General Recommendation", "Other"], {}, {class: 'form-control'}  %>
        
        <%= f.label :message %>
        <%= f.text_field :message, class: 'form-control' %>
        
        <%= f.hidden_field :item_id, :value => @item.id %>
        
        <%= f.submit "Report", class: "btn btn-danger" %>
<% end %>

